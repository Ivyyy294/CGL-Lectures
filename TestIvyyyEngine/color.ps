//Typedefs
cbuffer ColorBuffer
{
    float4 diffuseColor;
};

struct PixelInputType
{
	float4 position : SV_POSITION;
	float3 normal : NORMAL;
};

//Pixel Shader
float4 main(PixelInputType input) : SV_TARGET
{
	diffuseColor.r *= 0.5f;
	diffuseColor *= 0.5f;
	diffuseColor *= 0.5f;

	return diffuseColor;
}